{
    "name": "mcp_agents_webstep",
    "containerName": "mcp_agents_webstep",
    "image": "mcr.microsoft.com/devcontainers/python:3.12-bookworm",
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}/.devcontainer/mcp_agents_webstep",
    "remoteUser": "root",
    "command": "sleep infinity",
    "forwardPorts": [],
    "shutdownAction": "stopCompose",
    "runArgs": [
        "--name=mcp_agents_webstep",
        "--label=com.docker.compose.project=mcp_agents_webstep"
    ],
    "features": {
        "ghcr.io/va-h/devcontainers-features/uv:1": {}
    },
    "postCreateCommand": "./postCreateCommand.sh",
    "customizations": {
        "vscode": {
            "python.defaultInterpreterPath": ".venv/bin/python",
            "extensions": [
                "ms-python.python",
                "ms-python.debugpy",
                "ms-python.pylint",
                "ms-python.isort",
                "ms-python.vscode-pylance",
                "ms-python.black-formatter",
                "njpwerner.autodocstring",
                "eamodio.gitlens",
                "mhutchie.git-graph",
                "ms-toolsai.jupyter",
                "christian-kohler.path-intellisense"
            ],
            "settings": {
                "python.formatting.provider": "none",
                "editor.formatOnSave": true,
                "editor.rulers": [
                    88
                ],
                "files.trimTrailingWhitespace": true,
                "[python]": {
                    "editor.formatOnSave": true,
                    "editor.codeActionsOnSave": {
                        "source.organizeImports": "explicit"
                    },
                    "editor.defaultFormatter": "ms-python.black-formatter",
                    "editor.insertSpaces": true,
                    "editor.tabSize": 4
                },
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true,
                "isort.args": [
                    "--profile",
                    "black",
                    "--line-length",
                    "88"
                ],
                "black-formatter.args": [
                    "--line-length",
                    "88"
                ]
            }
        }
    }
}